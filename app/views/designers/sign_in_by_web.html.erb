<div class="row">
  <div class="large-12 columns">
    <h2>Designer Sign In</h2>
  </div>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {class: 'custom'}) do |f| %>
    <div class="row">
      <div class="large-6 columns">
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true %>
      </div>
      <div class="large-6 columns">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
    </div>
    <% if devise_mapping.rememberable? -%>
        <div class="row">
          <div class="large-12 columns">
            <%= f.label :remember_me do %><%= f.check_box :remember_me %> Remember Me? <% end %>
          </div>
        </div>
    <% end -%>

    <div class="row">
      <div class="large-12 columns">
        <%= f.submit 'Sign In', class: 'button', style: '' %>
      </div>
    </div>

<% end %>

<div class="row">
  <div class="large-12 columns">
    <%= link_to 'Sign up', '/designers/sign_up', class: 'small button secondary' %>
  </div>
</div>
