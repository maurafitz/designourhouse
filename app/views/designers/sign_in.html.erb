<div class= "Designer Sign In" style="margin:20px">

  <h2>Sign In</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {class:"custom"}) do |f| %>
      <div><%= f.label :email %>
        <%= f.email_field :email, :autofocus => true %></div>

      <div><%= f.label :password %>
        <%= f.password_field :password %></div>

      <% if devise_mapping.rememberable? -%>
          <div><%= f.label :remember_me do %><%= f.check_box :remember_me %> Remember Me? <% end %></div>
      <% end -%>

      <div><%= f.submit "Sign In" %></div>
  <% end %>

  <%= link_to "/designers/sign_up" %>

</div>